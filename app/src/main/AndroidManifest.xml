<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.allinonesocialapp.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.allinonesocialapp.android.view.UsageStatsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.allinonesocialapp.android.view.AboutActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.allinonesocialapp.android.view.PagerActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.allinonesocialapp.android.view.WebViewActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.allinonesocialapp.android.view.HomeActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.allinonesocialapp.android.view.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>